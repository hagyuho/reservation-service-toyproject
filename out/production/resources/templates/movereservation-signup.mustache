{{>layout/header}}

<h1>회원가입화면</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="hpNumber">핸드폰번호</label>
                <input type="text" class="form-control" id="hpNumber" placeholder="핸드폰번호를 입력하세요 (-없이 입력해주세요)">
            </div>
            <div class="form-group">
                <label for="password">비밀번호</label>
                <input type="text" class="form-control" id="password" placeholder="비밀번호를 입력하세요">
            </div>
            <div class="form-group">
                <label for="dong">거주 동</label>
                <input type="text" class="form-control" id="dong" placeholder="거주하시는 동을 입력하세요">
            </div>
            <div class="form-group">
                <label for="ho">거주 호수</label>
                <input type="text" class="form-control" id="ho" placeholder="거주하시는 호수를 입력하세요">
            </div>
            <div class="form-group">
            <label><input type="radio" id="role" name="role" value="user"> 사용자</label>
            <label><input type="radio" id="role2" name="role" value="admin"> 관리자</label>
            </div>
        </form>
        <button type="button" class="btn btn-primary" id="btn-signup">회원가입</button>
    </div>
</div>

{{>layout/footer}}