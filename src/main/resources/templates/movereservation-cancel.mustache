{{>layout/header}}

<h1>게시글 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="reservationId">예약 번호</label>
                <input type="text" class="form-control" id="reservationId" value="{{reservations.reservationId}}" readonly>
            </div>
            <div class="form-group">
                <label for="dong">예약 동</label>
                <input type="text" class="form-control" id="dong" value="{{reservations.dong}}" readonly>
            </div>
            <div class="form-group">
                <label for="ho"> 예약 호수 </label>
                <input type="text" class="form-control" id="ho" value="{{reservations.ho}}" readonly>
            </div>
            <div class="form-group">
                <label for="cancelReason"> 예약 취소 사유 </label>
                <input type="text" class="form-control" id="cancelReason"  >
            </div>

        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-cancel">예약취소</button>
    </div>
</div>

{{>layout/footer}}